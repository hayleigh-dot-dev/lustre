{
  "name": "lustre-client-test",
  "version": "0.1.0",
  "description": "testing for client scripts, and using vitest experimental bench",
  "scripts": {
    "bench": "run-s \"bench:**\"",
    "bench:build": "npm run build",
    "bench:vitest": "vitest bench --config ./vitest.config.ts",
    "build": "gleam build && esbuild --bundle --format=esm --outdir=build --allow-overwrite src/test-entry.js",
    "test": "run-s \"build\" \"test:vitest -- --run\"",
    "test:vitest": "vitest --config ./vitest.config.ts",
    "test:watch": "run-p \"watch:**\"",
    "watch:build": "gleam build && esbuild --bundle --format=esm --outdir=build --allow-overwrite --watch src/test-entry.js",
    "watch:test:vitest": "npm run test:vitest"
  },
  "author": "Jacob Scearcy",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.20.2",
    "linkedom": "^0.16.11",
    "npm-run-all": "^4.1.5",
    "vitest": "^1.5.0"
  }
}
